<div class="container" style="background-image: url('<%= image_path 'cocktails.jpg' %>')"">
  <div class="row">
    <div class="col-xs-12">
      <h1 style="color: white"><%= @cocktail.name %></h1>
      <%= link_to "Back to all cocktails", root_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3 style="color: white">Recipe</h3>
      <table class="table table-bordered rounded">
        <tbody>
          <thead>
            <th style="color: white">Ingredient</th>
            <th style="color: white">Description</th>
            <th style="color: white">Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td style="color: white"><%= dose.ingredient.name %></td>
              <td style="color: white"><%= dose.description.to_s %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you really sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6" style="color: white">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>
