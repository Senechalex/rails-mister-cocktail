<div class="banner text-center p-3" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,64,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>')">
  <div class="banner-content">
    <h1 >A grandmother's recipe book for cocktails</h1>
    <p>Bringing happiness to reasonable grandsons</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn p-2 btn-success btn-lg" %>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card rounded text-center p-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'cocktails.jpg' %>');">
          <div class="card-description" style="box-shadow: 2 4 12px">
            <h2 > <%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
        </div>
        <br>
      </div>
    <% end %>
    </div>
  </div>
</div>




